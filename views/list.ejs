<%- include("header") -%>

<body>
    <div class="box" id="heading">
        <h1><%= title %></h1>
    </div>
    
    <div class="box">
        <% items.forEach((item) => { %>
            <form action=<%="delete" + route %> method="post">
                <div class="item">
                    <input onChange="this.form.submit()" type="checkbox" name="checkbox" value=<%= item._id %>>
                    <p><%= item.name %></p>
                </div>
            </form>
        <% }); %>

        <form class="item" action=<%= route %> method="post">
            <input type="text" name="todo" placeholder="New Item" autocomplete="off">
            <button action="submit" name="listID" value=<%= listID %>>+</button>
        </form>
    </div>

</body>

<%- include("footer") -%>
